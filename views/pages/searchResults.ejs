<!DOCTYPE html>
<html lang="en">
<% include ../templates/head %>
<body>

  <% bookList.map(book => { %>
    <form id='save-form' action='/collection' method="POST">
      <input id='title' name='title' value=<%= book.title %> />
      <input id='author' name='author' value=<%= book.author %> />
      <fieldset>
        <input id='comments' placeholder='comments' name='comments' type='textField' />
      </fieldset>
      <button type='submit'>Save</button>
    </form>
  <% }) %> 
<% include ../templates/footer %>
</body>
</html>